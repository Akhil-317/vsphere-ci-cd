pipeline {
  agent { label 'ip_agent' }

  environment {
    IMAGE_NAME = "fastapi-jenkins"
    CONTAINER_NAME = "fastapi_app"
    APP_PORT = "8000"
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/Akhil-317/Redeploying.git', credentialsId: 'redeploy-git'
      }
    }

    stage('Deploy with Docker Compose') {
      steps {
        echo "ğŸ”„ Stopping any existing containers"
        sh 'docker compose down || true'

        echo "ğŸ³ Building Docker images"
        sh 'docker compose build'

        echo "ğŸš€ Starting containers"
        sh 'docker compose up -d'
      }
    }
  }

  post {
    success {
      echo "âœ… Deployment succeeded. Access app via http://192.168.128.173:80"
    }
    failure {
      echo "âŒ Deployment failed. Check Jenkins logs."
    }
  }
}
